{
  "name": "campus-app",
  "version": "1.0.0",
  "description": "Backend for the campus app",
  "main": "index.ts",
  "scripts": {
    "prepare": "npm run gcp-build",
    "pretest": "npm run gcp-build",
    "prestart": "npm run gcp-build",
    "test": "TEST_ID=$(uuidgen) mocha --require ts-node/register --exit --extension ts",
    "itest": "npm run gcp-build && INTERACTIVE=1 TEST_ID=$(uuidgen) node ./index.js",
    "posttest": "npm run lint",
    "lint": "tslint -p .",
    "fix": "tslint -p . --fix",
    "start": "node ./index.js",
    "gcp-build": "tsc -p .",
    "deploy": "gcloud app deploy"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.3.0",
    "@types/express": "^4.16.0",
    "@types/mocha": "^7.0.2",
    "mocha": "^7.1.0",
    "node-ts": "^5.0.4",
    "requires": "^1.0.2",
    "should": "^13.2.3",
    "ts-node": "^8.6.2",
    "tslint": "^5.11.0",
    "uuid": "^7.0.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^3.6.0",
    "@types/graphql": "^14.5.0",
    "@types/supertest": "^2.0.8",
    "express": "^4.18.2",
    "express-graphql": "^0.9.0",
    "firebase-admin": "^8.9.2",
    "graphql": "^14.6.0",
    "supertest": "^4.0.2",
    "typescript": "^3.8.3",
    "winston": "^3.2.1"
  }
}
